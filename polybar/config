[bar/mybar]
background = #222
modules-left = i3
modules-center = time
modules-right = battery date pulseaudio

[module/date]
type = internal/date
date = " | %Y-%m-%d | "

[module/time]
type = internal/date
time = %H:%M:%S
label = %time%


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
label-focused = %index%
label-focused-background = #FF0000
label-unfocused = %index%

[module/battery]
type = internal/battery
full-at = 98
battery = BAT0
adapter = ADP1

[module/pulseaudio]
type = internal/pulseaudio
sink = alsa_output.pci-0000_00_1b.0.analog-stereo
use-ui-max = true
interval = 5
